<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any?  %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
        <!-- Renders _micropost.html.erb partial. -->
      </ol>
      <%= will_paginate @microposts %>
      <!-- Since we're in the Users controller, we have to tell it to
      paginate microposts and not users. @microposts is defined in the
      user show action. -->
      <% end  %>
  </div>
</div>
<%= @user.name %>, <%= @user.email %>
